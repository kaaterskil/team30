<div id="container">
  <header id="t3-home-menu">
    <%= render template: 'shared/session_navigation' %>
    <%= render template: 'shared/personal_links' %>
  </header>
  <div id="content">
    <div id="t30-user"></div>

    <div class="row t30-user-page-top">
      <div class="small-8 small-offset-1 columns">
        <div class="stats-container">
          <% title_txt = @roster.starting_weight.nil? ? 'Create' : '' %>
          <h2><%= "#{title_txt} My 30 Day Goal for #{current_user.fetch_active_team.name}" %></h2>
          <%= render 'form', roster: @roster %>
        </div>
      </div>
      <div class="small-3 columns"></div>
    </div>
  </div>
</div>
