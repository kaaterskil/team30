<%= render template: 'shared/session_navigation' %>

<h2><%= @user.known_by %></h2>

<!-- Profile -->
<div class="">
  <div class="">
    <div class="">Gender</div>
    <div class=""><%= @user.gender %></div>
  </div>
    <div class="">Birth Date</div>
    <div class=""><%= @user.birth_date %></div>
  </div>
    <div class="">Height</div>
    <div class=""><%= @user.height %> inches</div>
  </div>
  <div class=""><%= link_to 'Edit', edit_user_path %></div>
</div>

<%= render template: 'shared/personal_links' %>

<!-- Teams -->
<div class="">
  <div class="">Your Results</div>
  <div class="">
    <ul>
      <% @data.each do |team_name, results| %>
      <div class="">
        <div class=""><%= team_name %></div>
        <div class="">
          <% results.each do |k, v| %>
          <span class=""><%= sprintf('%d', v) %></span>
          <% end %>
        </div>
      </div>
      <% end %>
    </ul>
  </div>
</div>

<!-- Messages -->
<div class=""><%= link_to 'Say Hello', new_message_path %></div>
<div class="">
  <% if @user.messages.empty? %>
  <div class="">You haven't been supporting your teammates. Send them a message!</div>
  <% else %>
  <%= render partial: 'shared/messages', locals: { messages: @user.messages } %>
  <% end %>
</div>
