<div id="container">
  <header id="t3-home-menu">
    <%= render template: 'shared/session_navigation' %>
    <%= render template: 'shared/personal_links' %>
  </header>
  <div id="content">
    <div id="t30-weigh-ins"></div>

    <div class="row t30-user-page-top">
      <div class="small-6 small-offset-1 columns">
        <div class="stats-container">
          <h2>My Weigh-Ins</h2>
          <% if current_user.fetch_active_team %>
          <div class=""><%= link_to 'New Weigh-In', new_weigh_in_path %></div>
          <% end %>

          <div class="table-container">
            <table class="scrollable-table">
              <thead class="fixed-thead">
                <tr>
                  <th width=""></th>
                  <th width="">Date</th>
                  <th width="">Calorie Adjustment</th>
                </tr>
              </thead>
              <tbody class="scrollable-tbody">
                <% if @weigh_ins.nil? || @weigh_ins.empty? %>
                <tr><td colspan="3">You haven't weighed in yet.</td></tr>
                <% else %>
                <%= render partial: 'weigh_in', collection: @weigh_ins %>
                <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
      <div class="small-5 columns"></div>
    </div>

  </div>
</div>
